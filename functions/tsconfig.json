{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        },
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "src",
        "../shared"
    ]
}